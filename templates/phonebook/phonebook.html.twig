{%  extends 'base.html.twig' %}
{% block body %}
<H1> Książka Telefoniczna </H1>
    <h2><a href="{{ path('AddContact')}}">Dodaj kontakt</a></h2>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Numer telefonu</th>
            <th>Miejscowość</th>
            <th>Kod pocztowy</th>
            <th>Ulica</th>
            <th>Numer budynku</th>
            <th>Numer mieszkania</th>
            <th>Akcja</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td><a href="{{ path('ContactDetail',{slug: contact.id })}}">{{ contact.id }}</a></td>
                <td>{{ contact.name }}</td>
                <td>{{ contact.getLastName() }}</td>
                <td>{{ contact.getPhoneNumber() }}</td>
                <td>{{ contact.getLocality() }}</td>
                <td>{{ contact.getZipCode() }}</td>
                <td>{{ contact.getStreet() }}</td>
                <td>{{ contact.getNumberOfTheBulding() }}</td>
                <td>{{ contact.getNumberApartment() }}</td>
                <td><a href="">Edytuj</a> | <a href="{{ path('DeleteContact',{slug: contact.id })}}">Usuń</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}