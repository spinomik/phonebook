{%  extends 'base.html.twig' %}
{% block body %}
    <H1> Szukaj </H1>
    <h2><a href="{{ path('AddContact')}}">Dodaj kontakt</a></h2>
    {{ form_start(SearchForm) }}
    {{ form_widget(SearchForm) }}

    <button type="submit">Szukaj</button>
    {{ form_end(SearchForm) }}
    <h1>Szczegóły kontaktu</h1>
    {% if results is defined %}
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Numer telefonu</th>
            <th>Miejscowość</th>
            <th>Kod pocztowy</th>
            <th>Ulica</th>
            <th>Numer budynku</th>
            <th>Numer mieszkania</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in results %}
        <tr>
            <td>{{ contact.id }}</td>
            <td>{{ contact.name }}</td>
            <td>{{ contact.getLastName() }}</td>
            <td>{{ contact.getPhoneNumber() }}</td>
            <td>{{ contact.getLocality() }}</td>
            <td>{{ contact.getZipCode() }}</td>
            <td>{{ contact.getStreet() }}</td>
            <td>{{ contact.getNumberOfTheBulding() }}</td>
            <td>{{ contact.getNumberApartment() }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endif %}


{% endblock %}